
@if (TempData["success"] != null)
{
    <div style="width:100% !important;background-color: #dff0d8;border-color: #d6e9c6;color: #3c763d;"  class="alert alert-success fade in" role="alert">
        @*<a class="close">×</a>*@
        <strong>Thành công!</strong> <span>@TempData["success"]</span>
    </div>
}
