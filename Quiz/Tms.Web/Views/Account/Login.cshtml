@model Tms.Models.User.UserLoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .label-content {
        display: block;
    }
</style>
<section class="full-width login">
    <main>
        <div class="container-fluid login-form-wrapper">
            <div class="container">
                <nav>
                    <div class="form-wrap pt-5 pb-5">
                        @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mx-auto p-3 form-login", @id = "form-signin" }))
                        {
                            <div class="m-4">
                                <h1 class="text-center" style="font-size:2rem;">Đăng nhập</h1>
                            </div>
                            @Html.AntiForgeryToken()
                            if (ViewBag.MessageError != null)
                            {
                                <div class="alert alert-warning color-red mg-bottom-5px text-center">
                                    @ViewBag.MessageError
                                </div>
                            }
                            <!-- <img src="./asset/img/logo-chinh-nam-ngang-mau-goc-1400x355-1.png"> -->
                            <div class="m-4">
                                <label for="exampleFormControlInput1" class="form-label">Email</label>
                                <div class="form-placeholder">
                                    <img src="~/Assets/images/ic_email.png" class="icon-placeholder">
                                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "new-input form-control" })
                                    @*<i class="icon-users form-control-feedback"></i>*@
                                </div>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "label-content" })
                            </div>
                            <div class="m-4">
                                <label for="exampleFormControlPassword1" class="form-label">Mật khẩu</label>
                                <div class="form-placeholder">
                                    <img src="~/Assets/images/ic_lock.png" class="icon-placeholder">
                                    @Html.PasswordFor(model => model.Password, new { @placeholder = "Mật khẩu", @class = "new-input form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "label-content" })
                            </div>
                            <div class="form-check m-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1" style="padding-left: 2rem;">Nhớ mật khẩu</label>
                                <a href="/account/ForgotPassword" class="float-r mr-3 form-text">Quên mật khẩu?</a>
                            </div>
                            <div class="m-4 pb-3 flex-r">
                                <button class="btn btn-primary">Đăng nhập</button>
                                <p class="mt-3">Chưa có tài khoản? <a href="/Account/Register">Đăng kí</a></p>
                            </div>
                        }
                    </div>
                </nav>

            </div>
        </div>
    </main>
</section>

<!-- Login wrapper -->

@Scripts.Render("~/bundles/jquery")
<script src="~/Assets/js/main.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        if ($('.alert-warning') != null && $('.alert-warning').text() != "") {
            $('.login-button').trigger("click");
        }

    });
</script>
