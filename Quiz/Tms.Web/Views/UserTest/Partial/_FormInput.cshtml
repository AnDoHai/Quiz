@model UserTestModel
@using Tms.Models.UserTestModel

<div class="panel panel-default">
    <div class="panel-body">
		<div class="form-group">
            <div class="col-sm-12">
                @Html.Partial("~/Views/Shared/Partial/_MessagePartial.cshtml")
            </div>
        </div>
		<div class="form-group">
			<label class="col-sm-2 control-label text-right">UserId: </label>
			<div class="col-sm-8">
				@Html.TextBoxFor(c => c.UserId, new { @class = "form-control" })
				@Html.ValidationMessageFor(c => c.UserId)
			</div>
			<span class="color-red">(*)</span>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label text-right">QuizID: </label>
