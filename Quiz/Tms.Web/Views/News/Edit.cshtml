@model Tms.Models.NewsModel.NewsModel

@{
    ViewBag.Title = "Edit Newss";
    Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

<div class="container">
    <div class="page-content-inner popup">
        @using (Html.BeginForm("Edit", "News", FormMethod.Post, new { id = "frmUpdate", @class = "form-horizontal", enctype = "mutipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="breadcrumb-line">
                <div class="form-actions action-breadcrumb">

                </div>
                <div class="visible-xs breadcrumb-toggle">
                    <a class="btn btn-link btn-lg btn-icon" data-toggle="collapse" data-target=".breadcrumb-buttons"><i class="icon-menu2"></i></a>
                </div>
            </div>

            @Html.HiddenFor(c => c.NewsId)
            <div class="container">@Html.Partial("Partial/_FormInput", Model)</div>

            <div class="form-actions text-right mr-10 margin-bottom-10">
                <button type="button" class="btn-xs btn btn-primary" onclick="location.href=''">
                    <i class="icon-exit3"></i> Hủy
                </button>
                <button type="submit" class="btn btn-xs btn-danger">
                    <i class="icon-plus-circle"></i> Lưu
                </button>
            </div>
        }
    </div>
</div>
<script>
    CKEDITOR.replace('editor1');
</script>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            newsModule.init();
        });
    </script>
}