    }

    .width_15 {
        width: 15%;
    }

    .width_20 {
        width: 20%;
    }

    .width_30 {
        width: 30%;
    }

    /**/
    th {
        background-color: #db3f4f !important;
        color: #fff !important;
        font-size: 1.5rem !important;
        height: auto;
        text-align: center !important;
