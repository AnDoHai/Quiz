<style>
    .icon {
        padding: 13px;
        background: dodgerblue;
        color: white;
        min-width: 50px;
        text-align: center;
        opacity:0.7;
    }
</style>
<div class="wrapper-login">
    <div id="login-button" style="bottom:30em;background-image: linear-gradient(to right, #d65c4f, #ffc107);">
        <img src="~/Assets/images/login-w-icon.png">
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group row">
                @*<div class="col-sm-12">
                    <label class="col-sm-12 control-label text-center"> <i class="icon-user-block" style="font-size:200px"></i> </label>
                </div>*@
                <input class="form-control hide" data-val="true" id="Email" name="Email" type="hidden" value="@ViewBag.Email">
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                        <div id="form-id" class="col-sm-4 ip_lock" style="margin:0 auto; display:inline-flex; position:absolute;top:14em;">
                            <input type="password" data-val="true" class="form-control" id="PasswordScreen" style="padding:20px; border:none" placeholder="Nhập mật khẩu ..."  onfocus="this.value=''"/>
                            @*<i class="icon-plus-circle icon" id="openScreen"></i>*@
                            <i class="fas fa-sign-out-alt icon" id="openScreen"></i>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

