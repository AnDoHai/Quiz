@model Tms.Models.QuizModel.QuizSearchModel
@using Tms.Web.Framework.Helpers
@{
    ViewBag.Title = "Bài thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .fas {
        padding-right: 0px;
    }

    #gap-831747663 {
        padding-top: 30px;
        background-color: #F3F3F3;
    }

    .kh-main {
        background-color: #F3F3F3;
        overflow: auto;
    }

        .kh-main .card {
            width: 70%;
            margin-left: 14%;
        }

        .kh-main .div1 {
            margin-top: 5%;
        }

        .kh-main .div2 {
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .kh-main .card-img-top {
            width: 100%;
        }

        .kh-main h4 {
            padding-top: 4%;
            color: black;
        }

        .kh-main button {
            color: black;
            font-size: 11px;
            border: 0.5px solid #E1E1E1;
            margin: 0;
            font-family: roboto;
            text-transform: none;
            width: 46%;
        }

        .kh-main .fa-hourglass-half {
            color: #A4A4A4;
            font-size: 25px !important;
            padding-right: 10%;
        }

        .kh-main .fa-file-alt {
            color: #A4A4A4;
            font-size: 25px !important;
            padding-right: 8%;
        }

        .kh-main .mb-3, .my-3 {
            margin-bottom: 1rem !important;
            margin-top: 5%;
        }

        .kh-main button:hover {
            background-color: #db3f4f;
            border: 0.5px solid #db3f4f;
        }

        .kh-main .button1 {
            margin-right: 10px;
        }

    .text-center > div, .text-center > div > div, .text-center .star-rating {
        margin: 0;
    }
</style>
<section class="kh-main">
    <div class="row">
        @if (RoleHelper.IsNguoiDungDisplay())
        {
            foreach (var item in Model.Quizs)
            {
                <a href="@Url.Action("Exam", "Quiz", new { id = item.QuizID })">
                    <div class="col-md-4 div1">
                        <div class="card text-center" style="width:max-content;">
                            <img src="~/Assets/images/Rectangle 21.png" class="card-img-top" />
                            <div class="card-body">
                                <h4>@item.QuizName</h4>
                                <button type="button" class="btn btn-outline-primary button1"><i class="fas fa-hourglass-half"></i> @item.TimeLimit Phút</button>
                                <button type="button" class="btn btn-outline-primary button2"><i class="far fa-file-alt"></i> Miễn phí</button>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            foreach (var item in Model.Quizs)
            {
                <a href="@Url.Action("Exam", "Quiz", new { id = item.QuizID })">
                    <div class="col-md-4 div1">
                        <div class="card text-center" style="width: max-content;">
                            <img src="~/Assets/images/Rectangle 21.png" class="card-img-top">
                            <div class="card-body">
                                <h4>@item.QuizName</h4>
                                <a type="button" class="btn btn-outline-primary button1"><i class="fas fa-hourglass-half"></i> @item.TimeLimit Phút</a>
                                <a type="button" class="btn btn-outline-primary button2"><i class="far fa-file-alt"></i> Miễn phí</a>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</section>
@section scripts
{
    <script src="~/Assets/plugins/chosen/chosen.jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if (window.localStorage.getItem('QuizTime')) {
                alert('22');
            } else {
                alert('33');
            }
        });
    </script>
}



