@model Tms.Models.Models.QuizModel.ExamModelSreach
@using Tms.Models
@{
    ViewBag.Title = "Sắp xếp bài thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .ui-widget-content{
        background:none !important;
    }
</style>
<div class="page-content-inner">
    <div class="row form-group">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="tab-pane mg-top-25px">
                    <div class="control-bar">
                        <div class="row justify-content-between">
                            <div class="page-header col-md-6">
                                <div class="page-title text-left">
                                    <h4>Sắp xếp đề thi</h4>
                                </div>
                            </div>
                            <div class="breadcrumb-line col-md-6">
                                <ul class="breadcrumb float-right font-size">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Quiz")">Quản lí đề thi</a></li>
                                    <li class="breadcrumb-item"><a href="javascript:void(0)">Cấu hình đề thi</a></li>
                                </ul>
                            </div>
                        </div>

                        <br />
                    </div>
                    <br />

                    <div id="main-quiz">
                        <div class="main-sort d-flex">
                            <div class="detail-sort col-md-12">
                                <div class="title-content-sort main-title-sort">
                                    <h4 class="content-title-sort">Chi tiết cấu hình</h4>
                                </div>
                                <div class="detail-content-sort content-detail-sort" style="overflow: scroll; background-color: rgb(231,231,231);">
                                    @Html.Partial("~/Views/Quiz/Partial/_SortQuizRightPartial.cshtml", Model)
                                </div>
                                <div class="save-button col-md-12 container">
                                    <div class="row justify-content-end row-save-sort">
                                          <button class="btn rBtn btn-outline-danger button-container button-save-sort w100 save-sort">Lưu</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->

</div>


@section scripts
{  
    <script src="~/Assets/js/jquery-ui.js"></script>
    <script src="~/Assets/plugins/chosen/chosen.jquery.min.js"></script>
    <script src="~/Assets/scripts/Tms.Quiz.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            quizModule.init();
            $('.section-sort-item').droppable({
                activeClass: 'active',
                hoverClass: 'hover',
                accept: ":not(.ui-sortable-helper)",
                drop: function (e, ui) {
                    var html = $(this).html();
                    html.click(function () { $(this).detach(); });
                    $(this).append(html);
                }
            }).sortable({
                items: '.section-drop'
            });

            $('.question-sort-item').droppable({
                activeClass: 'active',
                hoverClass: 'hover',
                accept: ":not(.ui-sortable-helper)",
                drop: function (e, ui) {
                    var html = $(this).html();
                    html.click(function () { $(this).detach(); });
                    $(this).append(html);
                }
            }).sortable({
                items: '.question-drop'
            });
        });
    </script>
}

