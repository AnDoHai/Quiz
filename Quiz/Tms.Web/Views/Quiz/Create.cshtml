@model Tms.Models.QuizModel.QuizModel

@{
    ViewBag.Title = "Tạo đề thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content-inner">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="tab-pane mg-top-25px">
                <div class="control-bar">
                    <div class="row">
                        <div class="page-header col-md-6">
                            <div class="page-title">
                                <h3>Tạo mới đề thi</h3>
                            </div>
                        </div>
                        <div class="breadcrumb-line col-md-6">
                            <ul class="breadcrumb float-right font-size">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Quiz")">Đề thi</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Create", "Quiz")">Thêm mới</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-5">
                        @using (Html.BeginForm("Create", "Quiz", FormMethod.Post, new { id = "frmCreate", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="breadcrumb-line">
                                <div class="form-actions action-breadcrumb">
                                </div>
                            </div>
                            <div class="col-12">
                                @Html.Partial("Partial/_FormInput", Model)
                            </div>
                            <br /><br />
                            <div class="col-12 mt-5 float-right">
                                <div class="form-actions text-right mr-25">
                                    <button type="submit" class="btn btn-xs rBtn">
                                        <i class="fas fa-save"></i> Lưu
                                    </button>
                                    <button type="button" class="btn btn-xs btn-primary" onclick="location.href='@Url.Action("Index","Quiz")'">
                                        <i class="fas fa-sign-out-alt"></i> Hủy
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles
{
    <link rel="stylesheet" type="text/css" href="~/assets/plugins/chosen/chosen.min.custom.css">
}
@section scripts
{
    <script src="~/Assets/plugins/chosen/chosen.jquery.min.js"></script>
    <script src="~/Assets/scripts/Tms.Quiz.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: '100%' });
            quizModule.init();
        });
    </script>
}
