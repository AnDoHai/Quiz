@model Tms.Models.CategoryNewModel.CategoryNewSearchModel
@using Tms.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content-inner">
    <div class="row form-group">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="tab-pane mg-top-25px">
                        <div class="control-bar">
                            <div class="row justify-content-between">
                                <div class="page-header col-md-6">
                                    <div class="page-title text-left">
                                        <h4>Quản lý Danh Mục</h4>
                                    </div>
                                </div>
                                <div class="breadcrumb-line col-md-6">
                                    <ul class="breadcrumb float-right font-size">
                                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "CategoryNew")">Quản lý Danh Mục</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 left-form">
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                            <label class="font-size mb-3">Tìm kiếm </label>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    @Html.TextBoxFor(c => c.TextSearch, new { @class = "form-control", @placeholder = "Nội dung tìm kiếm" })
                                                </div>
                                                <div class="col-sm-3">
                                                    <input type="button" id="btnSearch" value="Tìm kiếm" class="btn btn-green button-container rBtn w100" />
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-2">
                                    <a class="btn btn-right-icon btn-info float-right" title="Thêm mới News" href="@Url.Action("Create", "CategoryNew")">
                                        Thêm mới
                                    </a>
                                </div>
                            </div>
                        </div>
                </div>
                <br />

                <div id="main-categoryNew" style="float: left;width: 100%;">
                    @Html.Partial("~/Views/CategoryNew/Partial/_ListItems.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</div>
























<div id="categoryNew-action"></div>

@Html.Partial("Partial/_ConfirmPartial", new ConfirmModel { Id = "categoryNew", Title = "Xác nhận hành động", Content = "Bạn có muốn thực hiện xóa.?" })
@section scripts
{
    <script src="~/Assets/scripts/ecommerceSystem.CategoryNew.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            categoryNewModule.init();
        });
    </script>
}